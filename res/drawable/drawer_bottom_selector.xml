<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true">
        <shape>
		   	<solid android:color="@color/primary_bright" />
		</shape>
    </item>
    
    <item>
        <layer-list>
			<item>
				<shape>
			    	<solid android:color="@color/white" />
			 	</shape>
			</item>
			
			<item
			    android:left="12dp"
			    android:right="12dp" >
				<shape>
			    	<solid android:color="@color/primary_bright" />
			 	</shape>
			</item>
			
			<item
			    android:bottom="1dp" >
				<shape>
			    	<solid android:color="@color/white" />
				</shape>
			</item>
		</layer-list>
    </item>
    
</selector>
