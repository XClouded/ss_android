<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true">
        <shape>
		   	<solid android:color="@color/icon_bg" />
		   	<stroke 
		   	    android:width="0.1dp"
		   	    android:color="@color/divider" />
		   	<corners
		   	    android:radius="@dimen/corner_radius" />
		</shape>
    </item>
    
    <item>
        <layer-list>
			<item>
				<shape>
			    	<solid android:color="@color/divider" />
			    	<corners
				   	    android:radius="@dimen/corner_radius" />
			 	</shape>
			</item>
			
			<item
			    android:top="0.1dp"
			    android:left="0.1dp"
			    android:right="0.1dp"
			    android:bottom="1dp" >
				<shape>
			    	<solid android:color="@color/white" />
			    	<stroke 
				   	    android:width="0.1dp"
				   	    android:color="@color/divider" />
				   	<corners
				   	    android:radius="@dimen/corner_radius" />
				</shape>
			</item>
		</layer-list>
    </item>
    
</selector>
