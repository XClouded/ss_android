<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="TextViewBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/font_default</item>
    </style>
    
    <style name="TextViewTitle" parent="@style/TextViewBase">
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/margin_big</item>
        <item name="android:paddingBottom">@dimen/margin_big</item>
    </style>
    
    <style name="TextViewHint" parent="@style/TextViewBase">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/font_grey</item>
    </style>
    
    <style name="SmallTextViewTitle" parent="@style/TextViewHint">
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
    </style>
    
    <style name="TextViewDialog" parent="@style/TextViewBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/margin</item>
        <item name="android:paddingBottom">@dimen/margin</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
    </style>
    
    <style name="TextViewDialogTitle" parent="@style/TextViewDialog">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/font_white</item>
        <item name="android:background">@color/primary_dark</item>
    </style>
    
    <style name="TextViewMarquee" parent="@style/TextViewBase">
        <item name="android:gravity">left</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
    
    <style name="TextViewEllipsize" parent="@style/TextViewBase">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="TextViewIconLabel" parent="@style/TextViewHint">
        <item name="android:layout_marginTop">@dimen/icon_text_inverse_margin</item>
    </style>
    
    <style name="TextViewPlayTime" parent="@style/TextViewHint">
        <item name="android:textColor">@color/font_white</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
    </style>
    
</resources>
