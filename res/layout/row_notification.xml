<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.myandb.singsong"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_selector" >
    
    <com.myandb.singsong.widget.RoundedImageView
        android:id="@+id/iv_user_photo"
        android:layout_marginRight="@dimen/margin_small"
        app:oval="true"
        app:border_width="0.1dp"
        app:border_color="@color/divider"
        style="@style/UserImageView" />
    
    <TextView
	    android:id="@+id/tv_created_time"
	    android:layout_alignParentRight="true"
	    android:textColor="@color/font_hint"
	    style="@style/TextViewBase" />
    
    <TextView
        android:id="@+id/tv_notification_content"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/iv_user_photo"
        android:layout_toLeftOf="@id/tv_created_time"
        android:lineSpacingExtra="@dimen/margin_tiny"
        style="@style/TextViewBase" />
    
</RelativeLayout>

