<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="180dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/card_song" >
        
	    <com.myandb.singsong.widget.RoundedImageView
		    android:id="@+id/iv_album_photo"
		    android:layout_width="match_parent"
		    android:layout_height="100dp"
		    android:layout_marginBottom="@dimen/margin"
		    app:corner_radius="@dimen/corner_radius"
		    app:corner_top_left="true"
		    app:corner_top_right="true"
		    android:src="@color/red"
		    style="@style/BaseImageView" />
	    
	    <TextView
	        android:id="@+id/tv_singer_name"
	        android:layout_width="match_parent"
	        android:gravity="center"
	        android:text="singer"
	        android:textColor="@color/font_grey"
	        android:layout_margin="@dimen/margin_tiny"
	        style="@style/TextViewEllipsize" />
	    
	    <TextView
	        android:id="@+id/tv_music_title"
	        android:layout_width="match_parent"
	        android:gravity="center"
	        android:textSize="@dimen/text_bigger"
	        android:textStyle="bold"
	        android:layout_marginLeft="@dimen/margin_small"
	        android:layout_marginRight="@dimen/margin_small"
	        android:layout_marginBottom="@dimen/margin"
	        android:text="title"
	        style="@style/TextViewEllipsize" />
	    
	    <TextView
	        android:id="@+id/tv_sing_num"
	        android:visibility="gone"
	        style="@style/TextViewBase" />
        
    </LinearLayout>

</FrameLayout>
