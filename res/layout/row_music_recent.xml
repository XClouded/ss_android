<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp">
    
    <com.myandb.singsong.widget.RoundedImageView
        android:id="@+id/iv_album_photo"
        style="@style/S2.Widget.ImageView.Square"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mask_rounded" />

    <TextView
        android:id="@+id/tv_singer_name"
        style="@style/S2.Widget.TextView.Ellipsize.H4"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:gravity="left"
        android:textColor="@color/white"
        android:textSize="@dimen/text_main_content" />

    <TextView
        android:id="@+id/tv_music_title"
        style="@style/S2.Widget.TextView.Ellipsize.H3"
        android:layout_above="@id/tv_singer_name"
        android:layout_marginLeft="@dimen/margin"
        android:gravity="left"
        android:textSize="@dimen/text_title" />

    <TextView
        android:id="@+id/tv_sing_num"
        style="@style/S2.Widget.TextView"
        android:visibility="gone" />

</RelativeLayout>
