<?xml version="1.0" encoding="utf-8"?>
<com.myandb.singsong.widget.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myandb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_small"
    myandb:checkable="@+id/rb_role" >
    
    <ImageView
        android:id="@+id/iv_role_icon"
        style="@style/S2.Widget.ImageView.Icon.Big" />
    
    <TextView
        android:id="@+id/tv_role_title"
        android:layout_toRightOf="@id/iv_role_icon"
        android:layout_centerVertical="true"
        style="@style/S2.Widget.TextView" />
    
    <RadioButton
        android:id="@id/rb_role"
        android:layout_width="@dimen/icon_middle"
        android:layout_height="@dimen/icon_middle"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:clickable="false"
        android:button="@drawable/checkable_selector" />

</com.myandb.singsong.widget.CheckableRelativeLayout>
