<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_member_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <com.myandb.singsong.widget.RoundedImageView
	    android:id="@+id/iv_member_photo"
	    style="@style/S2.Widget.ImageView.User"
	    android:layout_gravity="center"
	    android:layout_marginBottom="@dimen/margin_tiny" />
    
    <TextView
        android:id="@+id/tv_member_nickname"
        android:textColor="@color/font_default"
        android:text="nickname"
        android:layout_marginBottom="@dimen/margin_tiny"
        style="@style/S2.Widget.TextView.Ellipsize.H3" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_big"
        android:orientation="horizontal" >
        
        <ImageView
            android:src="@drawable/ic_user_mini"
            style="@style/S2.Widget.ImageView.Icon" />
        
        <TextView
            android:id="@+id/tv_member_followers_num"
            android:text="233"
            style="@style/S2.Widget.TextView.H4.Label" />
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/tv_member_role_prefix"
        android:textColor="@color/font_grey"
        android:text="폭발적인"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_small"
        style="@style/S2.Widget.TextView.Ellipsize.Marquee.H3" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/iv_member_role_icon"
            android:src="@drawable/ic_check"
            style="@style/S2.Widget.ImageView.Icon.Middle" />
        
        <TextView
            android:id="@+id/tv_member_role"
            android:text="고음"
            android:layout_marginBottom="0dp"
            style="@style/S2.Widget.TextView.H2" />
        
    </LinearLayout>

</LinearLayout>
