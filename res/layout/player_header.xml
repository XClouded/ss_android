<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.myandb.singsong"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_small"
        android:background="@drawable/bg_play_song" >
        
        <LinearLayout
            android:id="@+id/image_wrapper"
            android:layout_width="match_parent"
            android:layout_height="@dimen/compat_song_image_height"
            android:baselineAligned="false"
            android:orientation="horizontal" >
            
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                
                <ImageView
                    android:id="@+id/iv_parent_song_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/BaseImageView" />
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mask_no_rounded" />
                
            </FrameLayout>
            
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                
                <ImageView
                    android:id="@+id/iv_this_song_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/BaseImageView" />
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mask_no_rounded" />
                
                <FrameLayout
                    android:id="@+id/fl_partner_mask"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/mask_low" >
                    
                    <TextView
                        android:text="콜라보를\n기다려요"
                        android:layout_gravity="center"
                        android:textColor="@color/font_white"
                        android:lineSpacingExtra="@dimen/margin_tiny"
                        style="@style/BaseTextView" />
                    
                </FrameLayout>
                
            </FrameLayout>
            
        </LinearLayout>
        
        <RelativeLayout
            android:id="@+id/control_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_wrapper"
            android:layout_marginTop="@dimen/margin" >
            
            <ImageView
                android:id="@+id/iv_neon"
                android:src="@drawable/ic_pause_neon_strong"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                style="@style/BaseImageView" />
            
		    <ImageView
		        android:id="@+id/iv_play_control"
		        android:src="@drawable/ic_play_neon"
		        android:layout_centerHorizontal="true"
		        style="@style/BaseImageView" />
		    
		    <ImageView
		        android:id="@+id/iv_loop_control"
		        android:src="@drawable/ic_loop_on"
		        android:layout_toLeftOf="@id/iv_play_control"
		        android:layout_marginRight="@dimen/margin"
		        android:layout_centerVertical="true"
		        style="@style/BaseImageView" />
		    
		    <ImageView
		        android:id="@+id/iv_autoplay_control"
		        android:src="@drawable/ic_autoplay_on"
		        android:layout_toRightOf="@id/iv_play_control"
		        android:layout_marginLeft="@dimen/margin"
		        android:layout_centerVertical="true"
		        style="@style/BaseImageView" />
            
        </RelativeLayout>
        
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/control_wrapper"
	        android:layout_marginTop="-10dp" >
	        
	        <TextView
	            android:id="@+id/tv_play_start_time"
	            android:layout_alignParentLeft="true"
	            android:text="@string/time_default"
	            style="@style/PlayTimeTextView" />
	        
	        <TextView
	            android:id="@+id/tv_play_end_time"
	            android:layout_alignParentRight="true"
	            android:text="@string/time_default"
	            style="@style/PlayTimeTextView" />
	        
	        <SeekBar
	            android:id="@+id/sb_play"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingLeft="@dimen/margin_small"
	            android:paddingRight="@dimen/margin_small"
	            android:minHeight="@dimen/margin_small"
	            android:maxHeight="@dimen/margin_small"
	            android:progressDrawable="@drawable/seekbar"
	            android:thumb="@drawable/seekbar_thumb"
	            android:thumbOffset="0dp"
	            android:layout_below="@id/tv_play_start_time" />
	        
	    </RelativeLayout>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small" >
        
        <TextView
            android:id="@+id/tv_root_info"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/margin_small"
            style="@style/EllipsizeTextView" />
        
        <RelativeLayout
            android:id="@+id/rl_start_collabo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_root_info"
            android:padding="0dp"
            android:background="@drawable/btn_primary_selector" >
            
            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/logo_text_white"
                style="@style/BaseImageView" />
            
        </RelativeLayout>
	    
    </RelativeLayout>
    
    <TextView
        android:paddingLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin_tiny"
        android:text="아티스트의 한마디"
        style="@style/BaseTextView" />
    
    <ImageView
        style="@style/DividerHorizontal" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small"
        android:background="@color/white" >
        
        <com.myandb.singsong.widget.RoundedImageView
            android:id="@+id/iv_parent_user_photo"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            app:oval="true"
            app:border_width="0.1dp"
            app:border_color="@color/divider"
            style="@style/UserImageView" />
        
        <TextView
            android:id="@+id/tv_parent_user_nickname"
            android:layout_toRightOf="@id/iv_parent_user_photo"
            android:layout_marginRight="@dimen/margin_tiny"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:textStyle="bold"
            style="@style/BaseTextView" />
        
        
        <TextView
            android:id="@+id/tv_parent_user_part"
            android:layout_toRightOf="@id/tv_parent_user_nickname"
            android:textColor="@color/font_grey"
            style="@style/BaseTextView" />
        
        <TextView
            android:id="@+id/tv_parent_song_message"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/iv_parent_user_photo"
            android:layout_below="@id/tv_parent_user_nickname"
            style="@style/BaseTextView" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_partner_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_small" >
        
        <com.myandb.singsong.widget.RoundedImageView
            android:id="@+id/iv_this_user_photo"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            app:oval="true"
            app:border_width="0.1dp"
            app:border_color="@color/divider"
            style="@style/UserImageView" />
        
        <TextView
            android:id="@+id/tv_this_user_nickname"
            android:layout_toRightOf="@id/iv_this_user_photo"
            android:layout_marginRight="@dimen/margin_tiny"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:textStyle="bold"
            style="@style/BaseTextView" />
        
        
        <TextView
            android:id="@+id/tv_this_user_part"
            android:layout_toRightOf="@id/tv_this_user_nickname"
            android:textColor="@color/font_grey"
            style="@style/BaseTextView" />
        
        <TextView
            android:id="@+id/tv_this_song_message"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/iv_this_user_photo"
            android:layout_below="@id/tv_this_user_nickname"
            style="@style/BaseTextView" />
        
    </RelativeLayout>
    
    <ImageView
        style="@style/DividerHorizontal" />
    
    <TextView
        android:id="@+id/tv_comment_num"
        android:paddingLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin_tiny"
        style="@style/BaseTextView" />
    
    <ImageView
        style="@style/DividerHorizontal" />

</LinearLayout>
