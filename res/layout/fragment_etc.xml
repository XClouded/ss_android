<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/tv_link_notice"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/margin_big"
            android:paddingBottom="@dimen/margin_big"
            android:paddingLeft="@dimen/margin"
            android:text="공지 사항"
            android:background="@drawable/row_naked_selector"
            style="@style/TextViewSubtitleAlone" />
	    
        <ImageView
	        style="@style/DividerHorizontal" />
        
        <TextView
            android:id="@+id/tv_link_faq"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/margin_big"
            android:paddingBottom="@dimen/margin_big"
            android:paddingLeft="@dimen/margin"
            android:text="FAQ"
            android:background="@drawable/row_naked_selector"
            style="@style/TextViewSubtitleAlone" />
	    
        <ImageView
	        style="@style/DividerHorizontal" />
        
        <TextView
            android:id="@+id/tv_link_free"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/margin_big"
            android:paddingBottom="@dimen/margin_big"
            android:paddingLeft="@dimen/margin"
            android:text="콜라보 게시판"
            android:background="@drawable/row_naked_selector"
            style="@style/TextViewSubtitleAlone" />
	    
        <ImageView
	        style="@style/DividerHorizontal" />
        
        <TextView
            android:id="@+id/tv_link_request_mr"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/margin_big"
            android:paddingBottom="@dimen/margin_big"
            android:paddingLeft="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:text="MR 요청 게시판"
            android:background="@drawable/row_naked_selector"
            style="@style/TextViewSubtitleAlone" />
	    
        <ImageView
	        style="@style/DividerHorizontal" />
        
        <TextView
            android:id="@+id/tv_link_facebook"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/margin_big"
            android:paddingBottom="@dimen/margin_big"
            android:paddingLeft="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:text="콜라보 노래방 페이스북"
            android:background="@drawable/row_naked_selector"
            style="@style/TextViewSubtitleAlone" />
        
        <TextView
            android:id="@+id/tv_link_playstore"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/margin_big"
            android:paddingBottom="@dimen/margin_big"
            android:paddingLeft="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:text="플레이 스토어에 리뷰 남기기"
            android:background="@drawable/row_naked_selector"
            style="@style/TextViewSubtitleAlone" />
	    
	    <include
	        layout="@layout/footer" />
	     
    </LinearLayout>

</ScrollView>
