<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.myandb.singsong"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin"
    android:paddingTop="@dimen/margin_small" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_song"
        android:paddingTop="@dimen/margin_small" >
        
        <com.myandb.singsong.widget.RoundedImageView
	        android:id="@+id/iv_album_photo"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="@dimen/margin_small"
	        android:layout_marginLeft="@dimen/margin"
	        app:corner_radius="@dimen/corner_radius"
	        app:corner_top_left="true"
	        app:corner_top_right="true"
	        app:corner_bottom_left="true"
	        app:corner_bottom_right="true"
	        style="@style/UserSmallImageView" />
        
        <TextView
            android:id="@+id/tv_music_info"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@id/iv_album_photo"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin"
            android:textSize="@dimen/text_small"
            style="@style/EllipsizeTextView" />
        
        <RelativeLayout
            android:id="@+id/creator_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_music_info"
            android:layout_toLeftOf="@id/iv_album_photo"
            android:paddingLeft="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small" >
	        
	        <com.myandb.singsong.widget.RoundedImageView
		        android:id="@+id/iv_parent_user_photo"
		        android:layout_marginRight="@dimen/margin_small"
		        app:oval="true"
		        app:border_width="0.1dp"
		        app:border_color="@color/divider"
		        style="@style/UserImageView" />
	        
	        <TextView
                android:id="@+id/tv_parent_user_nickname"
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/iv_parent_user_photo"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:textStyle="bold"
                style="@style/EllipsizeTextView" />
            
            <TextView
                android:id="@+id/tv_parent_song_message"
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/iv_parent_user_photo"
                android:layout_below="@id/tv_parent_user_nickname"
                android:textColor="@color/font_hint"
                style="@style/EllipsizeTextView" />
            
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/rl_partner_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/creator_wrapper"
            android:layout_toLeftOf="@id/iv_album_photo"
            android:paddingLeft="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small" >
	        
	        <com.myandb.singsong.widget.RoundedImageView
		        android:id="@+id/iv_this_user_photo"
		        android:layout_marginRight="@dimen/margin_small"
		        app:oval="true"
		        app:border_width="0.1dp"
		        app:border_color="@color/divider"
		        style="@style/UserImageView" />
	        
	        <TextView
                android:id="@+id/tv_this_user_nickname"
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/iv_this_user_photo"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:textStyle="bold"
                style="@style/EllipsizeTextView" />
            
            <TextView
                android:id="@+id/tv_this_song_message"
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/iv_this_user_photo"
                android:layout_below="@id/tv_this_user_nickname"
                android:textColor="@color/font_hint"
                style="@style/EllipsizeTextView" />
            
        </RelativeLayout>
        
        <ImageView
            android:id="@+id/divider"
            android:layout_below="@id/rl_partner_wrapper"
            android:layout_marginBottom="@dimen/margin_small"
            style="@style/DividerHorizontal" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:paddingLeft="@dimen/margin_big"
            android:paddingRight="@dimen/margin_big"
            android:paddingBottom="@dimen/margin_small" >
            
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal" >
	                
	            <ImageView
	                android:src="@drawable/ic_like_pink"
	                style="@style/IconImageView" />
	            
	            <TextView
	                android:id="@+id/tv_song_like_num"
	                android:layout_marginRight="@dimen/margin_big"
	                style="@style/IconLabelTextView" />
	            
	            <ImageView
	                android:src="@drawable/ic_comment_blue"
	                style="@style/IconImageView" />
	            
	            <TextView
	                android:id="@+id/tv_song_comment_num"
	                android:layout_marginRight="@dimen/margin_big"
	                style="@style/IconLabelTextView" />
                
            </LinearLayout>
            
            <TextView
                android:id="@+id/tv_song_created_time"
                android:layout_alignParentRight="true"
                style="@style/IconLabelTextView" />
            
        </RelativeLayout>
        
    </RelativeLayout>

</FrameLayout>
