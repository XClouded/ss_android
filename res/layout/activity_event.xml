<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary" >
    
    <ImageView
        android:id="@+id/iv_no_event"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:src="@drawable/img_no_event"
        style="@style/BaseImageView" />
    
    <com.myandb.singsong.widget.AutoLoadListView
        android:id="@+id/lv_full_width"
        android:visibility="gone"
        android:divider="@color/divider"
        android:dividerHeight="0.1dp"
        style="@style/CommonListView" />
    
    <WebView
        android:id="@+id/wv_event"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
