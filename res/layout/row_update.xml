<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.myandb.singsong"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/margin_small"
    android:paddingRight="@dimen/margin_small"
    android:paddingTop="@dimen/margin_small" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:paddingBottom="@dimen/margin_small" >
        
	    <LinearLayout
	        android:id="@+id/ll_l"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:paddingBottom="@dimen/margin_small"
	        android:orientation="vertical"
	        android:background="@drawable/card_song" >
	        
		    <com.myandb.singsong.widget.RoundedImageView
		        android:id="@+id/iv_album_photo_l"
		        android:layout_width="match_parent"
		        android:layout_height="90dp"
		        android:layout_marginBottom="@dimen/margin_small"
		        app:corner_radius="@dimen/corner_radius"
		        app:corner_top_left="true"
		        app:corner_top_right="true"
		        style="@style/BaseImageView" />
		    
		    <TextView
		        android:id="@+id/tv_singer_l"
		        android:layout_width="match_parent"
		        android:gravity="center"
		        android:layout_margin="@dimen/margin_tiny"
		        android:textColor="@color/font_grey"
		        style="@style/TextViewEllipsize" />
		    
		    <TextView
		        android:id="@+id/tv_title_l"
		        android:layout_width="match_parent"
		        android:layout_margin="@dimen/margin_tiny"
		        android:gravity="center"
		        android:textStyle="bold"
		        style="@style/TextViewEllipsize" />
	        
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/ll_r"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:paddingBottom="@dimen/margin_small"
	        android:layout_marginLeft="@dimen/margin"
	        android:orientation="vertical"
	        android:background="@drawable/card_song" >
	        
		    <com.myandb.singsong.widget.RoundedImageView
		        android:id="@+id/iv_album_photo_r"
		        android:layout_width="match_parent"
		        android:layout_height="90dp"
		        android:layout_marginBottom="@dimen/margin_small"
		        app:corner_radius="@dimen/corner_radius"
		        app:corner_top_left="true"
		        app:corner_top_right="true"
		        style="@style/BaseImageView" />
		    
		    <TextView
		        android:id="@+id/tv_singer_r"
		        android:layout_width="match_parent"
		        android:gravity="center"
		        android:layout_margin="@dimen/margin_tiny"
		        android:textColor="@color/font_grey"
		        style="@style/TextViewEllipsize" />
		    
		    <TextView
		        android:id="@+id/tv_title_r"
		        android:layout_width="match_parent"
		        android:layout_margin="@dimen/margin_tiny"
		        android:gravity="center"
		        android:textStyle="bold"
		        style="@style/TextViewEllipsize" />
	        
	    </LinearLayout>
        
    </LinearLayout>

</FrameLayout>
