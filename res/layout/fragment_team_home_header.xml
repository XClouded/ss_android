<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_team_background_photo"
        style="@style/S2.Widget.ImageView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@color/grey_dark" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@color/mask_middle" />

    <LinearLayout
        android:id="@+id/ll_member_menus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/abc_action_bar_default_height"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin" >

        <RelativeLayout
            android:id="@+id/rl_team_collabo_workspace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/icon_workspace"
                style="@style/S2.Widget.ImageView.Icon.Big"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:layout_marginRight="0dp"
                android:src="@drawable/img_ballad" />

            <TextView
                style="@style/S2.Widget.TextView.H3.Inverse"
                android:layout_below="@id/icon_workspace"
                android:text="작업 공간" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_team_community"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/icon_community"
                style="@style/S2.Widget.ImageView.Icon.Big"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:layout_marginRight="0dp"
                android:src="@drawable/img_hiphop" />

            <TextView
                style="@style/S2.Widget.TextView.H3.Inverse"
                android:layout_below="@id/icon_community"
                android:text="팀 커뮤니티" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_member_candidates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/icon_candidates"
                style="@style/S2.Widget.ImageView.Icon.Big"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:layout_marginRight="0dp"
                android:src="@drawable/img_ballad" />

            <TextView
                style="@style/S2.Widget.TextView.H3.Inverse"
                android:layout_below="@id/icon_candidates"
                android:text="초대⋅지원" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:orientation="vertical" >

        <com.github.siyamed.shapeimageview.HexagonImageView
            android:id="@+id/iv_team_emblem"
            style="@style/S2.Widget.ImageView.Team.Big"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_small"
            android:src="@drawable/img_indie" />

        <TextView
            android:id="@+id/tv_team_title"
            style="@style/S2.Widget.TextView.Ellipsize.H3"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="team title"
            android:textColor="@color/font_default"
            android:textSize="@dimen/text_impact" />

        <TextView
            android:id="@+id/tv_team_description"
            style="@style/S2.Widget.TextView.H4"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="7인조 댄스 남성그룹" />

        <TextView
            android:id="@+id/tv_team_status"
            style="@style/S2.Widget.TextView.H4"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:maxLines="2"
            android:text="상태 메세지지" />

        <TextView
            android:id="@+id/tv_followers"
            style="@style/S2.Widget.TextView.H4"
            android:layout_gravity="center_horizontal"
            android:text="팔로워 92"
            android:textColor="@color/font_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin"
            android:paddingTop="@dimen/margin" >

            <Button
                android:id="@+id/btn_apply"
                style="@style/S2.Widget.Button.Mini"
                android:layout_width="75dp"
                android:layout_marginRight="@dimen/margin"
                android:background="@drawable/button_transparent_primary_selector"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:textColor="@color/font_highlight"
                android:text="팀 지원" />

            <Button
                android:id="@+id/btn_follow"
                style="@style/S2.Widget.Button.Mini"
                android:layout_width="75dp"
                android:background="@drawable/button_transparent_primary_selector"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:textColor="@color/font_highlight"
                android:text="+팔로우" />

            <Button
                android:id="@+id/btn_edit_team"
                style="@style/S2.Widget.Button.Mini"
                android:layout_width="75dp"
                android:layout_marginRight="@dimen/margin"
                android:background="@drawable/button_transparent_primary_selector"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:textColor="@color/font_highlight"
                android:text="팀 수정" />

            <Button
                android:id="@+id/btn_edit_role"
                style="@style/S2.Widget.Button.Mini"
                android:layout_width="75dp"
                android:background="@drawable/button_transparent_primary_selector"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:textColor="@color/font_highlight"
                android:text="역할 수정" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_team_members"
                style="@style/S2.Widget.TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tab_selector"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:paddingBottom="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_team_collabos"
                style="@style/S2.Widget.TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tab_selector"
                android:gravity="center"
                android:lineSpacingExtra="3sp"
                android:paddingBottom="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>