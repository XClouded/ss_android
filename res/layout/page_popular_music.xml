<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
        android:id="@+id/iv_album_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ImageViewBase" />
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mask_no_rounded" />
    
    <TextView
        android:id="@+id/tv_music_info"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:layout_alignParentBottom="true"
        android:textColor="@color/font_white"
        style="@style/TextViewBase" />
    
    <LinearLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/circle_primary_trans" >
        
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_collabo_white"
            style="@style/ImageViewBase" />
        
        <TextView
            android:id="@+id/tv_music_sing_num"
            android:layout_marginTop="-6sp"
            android:textColor="@color/white"
            style="@style/TextViewHint" />
        
    </LinearLayout>

</RelativeLayout>
