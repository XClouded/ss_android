<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp" >
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@drawable/card_song" >
	    
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="100dp" >
	        
		    <com.myandb.singsong.widget.RoundedImageView
		        android:id="@+id/iv_album_photo"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        app:corner_radius="@dimen/corner_radius"
		        app:corner_top_left="true"
		        app:corner_top_right="true"
		        style="@style/ImageViewBase" />
		    
		    <com.myandb.singsong.widget.RoundedImageView
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:src="@drawable/mask_profile"
		        app:corner_radius="@dimen/corner_radius"
		        app:corner_top_left="true"
		        app:corner_top_right="true"
		        style="@style/ImageViewBase" />
		    
		    <TextView
		        android:id="@+id/tv_music_title"
		        android:layout_marginBottom="@dimen/margin_bigger"
		        android:layout_alignParentBottom="true"
		        android:textSize="@dimen/text_impact"
		        style="@style/TextViewOverflowableImportant" />
		    
		    <TextView
		        android:id="@+id/tv_singer_name"
		        android:layout_above="@id/tv_music_title"
		        android:textColor="@color/font_white"
		        android:textSize="@dimen/text_main_content"
		        style="@style/TextViewOverflowableLessImportant" />
		    
		    <TextView
		        android:id="@+id/tv_sing_num"
		        android:visibility="gone"
		        style="@style/TextViewBase" />
	        
	    </RelativeLayout>
	    
	    <TextView
	        android:text="이 사람들과 같이 불러보세요"
	        android:padding="@dimen/margin_small"
	        android:layout_width="match_parent"
	        android:gravity="center"
	        style="@style/TextViewLessImportant" />
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal" >
	        
	        <LinearLayout
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:orientation="vertical"
	            android:gravity="center" >
	            
	            <com.myandb.singsong.widget.RoundedImageView
	                android:id="@+id/iv_first_user_photo"
	                android:layout_marginBottom="@dimen/margin_small"
	                style="@style/ImageViewUser" />
	            
	            <TextView
	                android:id="@+id/tv_first_user_nickname"
	                style="@style/TextViewOverflowableLessImportant" />
	            
	        </LinearLayout>
	        
	        <LinearLayout
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:orientation="vertical"
	            android:gravity="center" >
	            
	            <com.myandb.singsong.widget.RoundedImageView
	                android:id="@+id/iv_second_user_photo"
	                android:layout_marginBottom="@dimen/margin_small"
	                style="@style/ImageViewUser" />
	            
	            <TextView
	                android:id="@+id/tv_second_user_nickname"
	                style="@style/TextViewOverflowableLessImportant" />
	            
	        </LinearLayout>
	        
	        <LinearLayout
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1"
	            android:orientation="vertical"
	            android:gravity="center" >
	            
	            <com.myandb.singsong.widget.RoundedImageView
	                android:id="@+id/iv_third_user_photo"
	                android:layout_marginBottom="@dimen/margin_small"
	                style="@style/ImageViewUser" />
	            
	            <TextView
	                android:id="@+id/tv_third_user_nickname"
	                style="@style/TextViewOverflowableLessImportant" />
	            
	        </LinearLayout>
	        
	    </LinearLayout>
	
	</LinearLayout>
	
</FrameLayout>
