<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.myandb.singsong"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_selector" >
    
    <com.myandb.singsong.widget.RoundedImageView
	    android:id="@+id/iv_parent_user_photo"
	    android:layout_marginRight="@dimen/margin_small"
	    app:oval="true"
	    app:border_width="0.1dp"
	    app:border_color="@color/divider"
	    style="@style/UserImageView" />
    
    <TextView
        android:id="@+id/tv_song_created_time"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/margin_small"
        style="@style/TextViewHint" />
    
    <TextView
        android:id="@+id/tv_parent_user_nickname"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/iv_parent_user_photo"
        android:layout_toLeftOf="@id/tv_song_created_time"
        android:textStyle="bold"
        style="@style/TextViewMarquee" />
    
    <TextView
        android:id="@+id/tv_parent_song_message"
        android:layout_toRightOf="@id/iv_parent_user_photo"
        android:layout_below="@id/tv_parent_user_nickname"
        android:textColor="@color/font_hint"
        style="@style/BaseImageView" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_parent_user_photo"
        android:layout_below="@id/tv_parent_song_message"
        android:layout_marginTop="@dimen/margin_small" >
        
        <ImageView
            android:src="@drawable/ic_like_pink"
            style="@style/IconImageView" />
        
        <TextView
            android:id="@+id/tv_song_like_num"
            android:layout_marginRight="@dimen/margin_big"
            style="@style/TextViewIconLabel" />
        
        <ImageView
            android:src="@drawable/ic_comment_blue"
            style="@style/IconImageView" />
        
        <TextView
            android:id="@+id/tv_song_comment_num"
            android:layout_marginRight="@dimen/margin_big"
            style="@style/TextViewIconLabel" />
        
    </LinearLayout>
    
</RelativeLayout>

