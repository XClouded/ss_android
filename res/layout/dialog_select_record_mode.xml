<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    
    <com.myandb.singsong.widget.RoundedImageView
        android:id="@+id/iv_album_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        style="@style/ImageViewSquare" />
    
    <TextView
        android:id="@+id/tv_singer_name"
        android:textColor="@color/font_white"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_tiny"
        style="@style/TextViewOverflowableLessImportant" />
    
    <TextView
        android:id="@+id/tv_music_title"
        android:layout_marginBottom="@dimen/margin"
        style="@style/TextViewOverflowableImportant" />
    
    <Button
        android:id="@+id/btn_sing_alone"
        android:text="혼자 부르기"
        android:layout_marginBottom="@dimen/margin"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="@drawable/button_transparent_selector"
        style="@style/ButtonBase" />
    
    <Button
        android:id="@+id/btn_sing_duet"
        android:text="같이 부르기"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:background="@drawable/button_transparent_selector"
        style="@style/ButtonBase" />

</LinearLayout>
