        android:background="@drawable/container_border"
        style="@style/TextViewBase" />
    
    <TextView
        android:id="@+id/privacy_title"
        android:layout_below="@id/tv_important_terms"
        android:text="개인정보 수집 및 이용 동의"
        android:textStyle="bold"
        style="@style/TextViewSubtitle" />
    
    <TextView
        android:id="@+id/tv_show_all_privacy"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/privacy_title"
        android:text="전문보기"
        android:textSize="@dimen/text_subtitle"
        android:textColor="@color/primary_dark"
        android:linksClickable="true"
        style="@style/TextViewBase" />
    
    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/privacy_title"
        android:stretchColumns="*" >
        
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_small"
            android:background="@color/grey_dark" >
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="목적"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                style="@style/TextViewBase" />
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="항목"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                style="@style/TextViewBase" />
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="보유기간"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                style="@style/TextViewBase" />
            
        </TableRow>
        
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="@dimen/margin_small"
            android:background="@color/grey_light_trans" >
            
            <TextView
                android:id="@+id/tv_privacy_purpose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:maxLines="4"
                android:text="①회원제서비스 운영 및 관리(가입 및 탈퇴 처리 등)\n②중요사항 고지 등 의사소통 경로\n③서비스 민원사항∙고충 처리, 결과 안내
                ④서비스 부정이용행위 제재 등\n⑤회원의 정보 열람, 정정권 이행\n⑥정보통신망법 등 관련 법령에 따른 보유 및 보존의무 이행"
                android:textSize="@dimen/text_sub_content"
                style="@style/TextViewBase" />
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="이메일(아이디), 비밀번호, 닉네임"
                android:textSize="@dimen/text_sub_content"
                android:gravity="center"
                style="@style/TextViewBase" />
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="회원탈퇴 후 6개월간"
                android:textSize="@dimen/text_sub_content"
                android:gravity="center"
                style="@style/TextViewBase" />
            
        </TableRow>
        
    </TableLayout>
    
    <TextView
        android:id="@+id/agreement"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:layout_below="@id/table"
        android:textStyle="bold"
        android:text="이용약관 및 개인정보 동의 내용을 확인하였으며 위 내용에 동의합니다."
        android:gravity="center"
        style="@style/TextViewSubtitle" />
    
    <Button
	    android:id="@+id/btn_join_complete"
	    android:layout_alignParentRight="true"
	    android:layout_below="@id/agreement"
	    android:text="@string/join"
	    android:background="@drawable/button_primary_selector"
	    style="@style/ButtonBase" />

</RelativeLayout>
