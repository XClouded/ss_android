<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_container" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_big"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:orientation="vertical" >
        
        <TextView
            android:paddingBottom="@dimen/margin_big"
            android:text="이메일로 가입"
            android:textStyle="bold"
            android:textSize="@dimen/text_big"
            style="@style/BaseTextView" />
        
        <ImageView
        	style="@style/DividerHorizontal" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <TextView
	            android:id="@+id/tv_valid_username"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginLeft="@dimen/margin"
	            android:layout_marginRight="@dimen/margin"
	            android:text="@string/_check"
	            android:textStyle="bold"
	            style="@style/SmallTextView" />
	        
	        <EditText
		        android:id="@+id/et_user_username"
		        android:hint="@string/hint_username"
		        android:inputType="textPersonName"
		        android:layout_toLeftOf="@id/tv_valid_username"
		        style="@style/BaseEditText" />
            
        </RelativeLayout>
        
        <ImageView
        	style="@style/DividerHorizontal" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <TextView
	            android:id="@+id/tv_valid_password"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginLeft="@dimen/margin"
	            android:layout_marginRight="@dimen/margin"
	            android:text="@string/_check"
	            android:textStyle="bold"
	            style="@style/SmallTextView" />
	        
	        <EditText
		        android:id="@+id/et_user_password"
		        android:hint="@string/hint_password"
		        android:maxLength="32"
		        android:inputType="textPassword"
		        style="@style/BaseEditText" />
            
        </RelativeLayout>
        
        <ImageView
        	style="@style/DividerHorizontal" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <TextView
	            android:id="@+id/tv_valid_password_re"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginLeft="@dimen/margin"
	            android:layout_marginRight="@dimen/margin"
	            android:text="@string/_check"
	            android:textStyle="bold"
	            style="@style/SmallTextView" />
	        
	        <EditText
		        android:id="@+id/et_user_password_re"
		        android:hint="@string/hint_re_password"
		        android:maxLength="32"
		        android:inputType="textPassword"
		        style="@style/BaseEditText" />
	        
        </RelativeLayout>
        
    </LinearLayout>
    
    <ImageView
        style="@style/DividerHorizontal" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin" >
        
        <Button
		    android:id="@+id/btn_join_complete"
		    android:layout_alignParentRight="true"
		    android:layout_marginLeft="@dimen/margin"
		    android:text="@string/join"
		    android:background="@drawable/btn_primary_selector"
		    style="@style/BaseButton" />
        
        <TextView
            android:id="@+id/tv_agreement_policy"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@id/btn_join_complete"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_tiny"
            android:linksClickable="true"
            style="@style/SmallTextView" />
        
    </RelativeLayout>

</LinearLayout>
