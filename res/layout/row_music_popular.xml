<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="150dp" >
    
    <com.myandb.singsong.widget.RoundedImageView
        android:id="@+id/iv_album_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:corner_radius="@dimen/corner_radius"
        app:corner_top_left="true"
        app:corner_top_right="true"
        app:corner_bottom_left="true"
        app:corner_bottom_right="true"
        style="@style/BaseImageView" />
    
    <com.myandb.singsong.widget.RoundedImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mask_profile"
        app:corner_radius="@dimen/corner_radius"
        app:corner_top_left="true"
        app:corner_top_right="true"
        app:corner_bottom_left="true"
        app:corner_bottom_right="true"
        style="@style/BaseImageView" />
    
    <TextView
        android:id="@+id/tv_music_title"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="@dimen/margin_bigger"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_biggest"
        android:textStyle="bold"
        android:text="asdf"
        style="@style/TextViewBase" />
    
    <TextView
        android:id="@+id/tv_singer_name"
        android:layout_alignLeft="@id/tv_music_title"
        android:layout_above="@id/tv_music_title"
        android:textColor="@color/font_white"
        android:textSize="@dimen/text"
        android:text="fdfdf"
        style="@style/TextViewBase" />
    
    <TextView
        android:id="@+id/tv_sing_num"
        android:visibility="gone"
        style="@style/TextViewBase" />

</RelativeLayout>
