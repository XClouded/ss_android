<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="150dp" >
    
    <com.myandb.singsong.widget.RoundedImageView
        android:id="@+id/iv_album_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ImageViewSquare" />
    
    <com.myandb.singsong.widget.RoundedImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mask_profile"
        style="@style/ImageViewSquare" />
    
    <TextView
        android:id="@+id/tv_music_title"
        android:layout_marginBottom="@dimen/margin_bigger"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/text_impact"
        style="@style/TextViewOverflowableImportant" />
    
    <TextView
        android:id="@+id/tv_singer_name"
        android:layout_above="@id/tv_music_title"
        android:textColor="@color/font_white"
        android:textSize="@dimen/text_main_content"
        style="@style/TextViewOverflowableLessImportant" />
    
    <TextView
        android:id="@+id/tv_sing_num"
        android:visibility="gone"
        style="@style/TextViewBase" />

</RelativeLayout>
