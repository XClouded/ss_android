<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
            
	<ImageView
	    android:id="@+id/iv_drag_play_control"
	    android:src="@drawable/ic_play"
	    android:layout_width="26dp"
	    android:layout_height="38dp"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="@dimen/margin_bigger"
	    android:layout_marginLeft="@dimen/margin"
	    style="@style/ImageViewBase" />
	
	<TextView
	    android:id="@+id/tv_singer_name_on_collapsed"
	    android:layout_toRightOf="@id/iv_drag_play_control"
	    android:layout_alignTop="@id/iv_drag_play_control"
	    android:textColor="@color/font_white"
	    style="@style/TextViewHint" />
	
	<TextView
	    android:id="@+id/tv_music_title_on_collapsed"
	    android:layout_toRightOf="@id/iv_drag_play_control"
	    android:layout_alignBottom="@id/iv_drag_play_control"
	    android:textSize="@dimen/text_bigger"
	    android:textColor="@android:color/white"
	    android:textStyle="bold"
	    style="@style/TextViewMarquee" />
            
</RelativeLayout>