<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myandb.singsong"
    android:versionCode="41"
    android:versionName="0.9.3.2" >
    
    <uses-sdk
        android:minSdkVersion="10" android:targetSdkVersion="19"/>

    <permission 
        android:name="com.myandb.singsong.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    
    <uses-permission android:name="com.myandb.singsong.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.myandb.singsong.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar"
        android:largeHeap="true" >
        
        <!-- facebook -->
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/fb_app_id" />
        <activity android:name="com.facebook.LoginActivity" />
        
        <activity
            android:name="com.myandb.singsong.activity.LogoActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.myandb.singsong.activity.GuideActivity" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.myandb.singsong.activity.MainActivity" >
            <intent-filter >
                <action android:name="com.myandb.singsong.activity.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.myandb.singsong.activity.SearchActivity" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.myandb.singsong.activity.SettingActivity" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.myandb.singsong.activity.PlayerActivity" >
            <intent-filter >
                <action android:name="com.myandb.singsong.activity.PlayerActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.myandb.singsong.activity.RecordMainActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.myandb.singsong.activity.RecordSettingActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.myandb.singsong.activity.ProfileRootActivity" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.myandb.singsong.activity.SimpleListActivity" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.myandb.singsong.activity.ChildSongActivity" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.myandb.singsong.activity.ProfileEditActivity" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.myandb.singsong.activity.PhotoSlideActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.myandb.singsong.activity.MusicUpdateActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.myandb.singsong.activity.NoticeActivity" >
        </activity>
        
        <service
            android:enabled="true"
            android:name="com.myandb.singsong.service.PlayerService"
            android:exported="false" >
            <intent-filter >
                <action android:name="com.myandb.singsong.service.PlayerService"/>
            </intent-filter>
        </service>

        <service
            android:enabled="true"
            android:name="com.myandb.singsong.service.SongUploadService"
            android:exported="false" >
            <intent-filter >
                <action android:name="com.myandb.singsong.service.SongUploadService"/>
            </intent-filter>
        </service>
        
        <service android:name=".GCMIntentService" />
        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="com.myandb.singsong" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
